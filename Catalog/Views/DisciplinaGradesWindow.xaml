<Window x:Class="StudentGradeManagement.Views.DisciplinaGradesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentGradeManagement.Views"
        mc:Ignorable="d"
        Title="Note Disciplină" Height="450" Width="600"
        Background="#1E1E1E"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock x:Name="txtDisciplinaInfo" FontSize="16" FontWeight="Bold" Margin="0,0,0,5"/>
            <TextBlock x:Name="txtDisciplinaDetails" Margin="0,0,0,10"/>
        </StackPanel>
        
        <DataGrid Grid.Row="1" x:Name="dgNote" AutoGenerateColumns="False" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Student" Binding="{Binding StudentNume}" Width="200"/>
                <DataGridTextColumn Header="Grupa" Binding="{Binding Grupa}" Width="100"/>
                <DataGridTextColumn Header="Notă" Binding="{Binding ValoareNota}" Width="80"/>
                <DataGridTextColumn Header="Data Notării" Binding="{Binding DataNotarii, StringFormat=\{0:dd.MM.yyyy\}}" Width="120"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
        
        <StackPanel Grid.Row="2" Margin="0,10,0,0">
            <TextBlock x:Name="txtSummary" FontWeight="Bold"/>
            <Button Content="Închide" HorizontalAlignment="Right" Width="80" Margin="0,10,0,0" IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
